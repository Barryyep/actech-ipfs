{
  "name": "AC Future Design System",
  "version": "1.0.0",
  "description": "Complete design system documentation for AC Future website",
  "colors": {
    "primary": {
      "gold": "#DAC3A4",
      "goldHover": "#d0b48e",
      "goldLight": "#ebd5b9",
      "goldDark": "#cfb491"
    },
    "background": {
      "body": "#000",
      "dark": "#171717",
      "darkTheme": "#171717",
      "secondary": "#212121"
    },
    "text": {
      "primary": "#fff",
      "secondary": "#a2a2a2",
      "gradient": {
        "type": "linear-gradient",
        "angle": "91deg",
        "stops": [
          { "color": "#FEF4D9", "position": "0%" },
          { "color": "#F9E1A2", "position": "60%" },
          { "color": "#FBD5B3", "position": "100%" }
        ]
      }
    },
    "status": {
      "success": "#2ac467",
      "error": "#d40d42",
      "errorBackground": "rgba(228, 19, 19, 0.3)"
    },
    "border": {
      "light": "rgba(255, 255, 255, 0.2)",
      "medium": "#495057",
      "dark": "#dee2e6"
    },
    "overlay": {
      "light": "rgba(255, 255, 255, 0.2)",
      "medium": "rgba(255, 255, 255, 0.3)",
      "dark": "rgba(0, 0, 0, 0.6)"
    }
  },
  "typography": {
    "fonts": {
      "body": {
        "family": "century_gothic-regular",
        "files": [
          "century_gothic-webfont.woff2",
          "century_gothic-webfont.woff"
        ]
      },
      "bold": {
        "family": "century_gothic-bold",
        "files": [
          "century_gothic_bold-webfont.woff2",
          "century_gothic_bold-webfont.woff"
        ]
      },
      "display": {
        "family": "cropar",
        "files": [
          "cropar-webfont.woff2",
          "cropar-webfont.woff"
        ]
      }
    },
    "sizes": {
      "mobile": {
        "body": "16px",
        "small": "14px",
        "large": "1.25rem",
        "xlarge": "1.25rem",
        "xxlarge": "1rem",
        "h1": "2rem",
        "h3": "1.5rem",
        "h4": "1.25rem",
        "display1": "3rem",
        "display2": "3rem"
      },
      "desktop": {
        "minWidth": "1400px",
        "body": "20px",
        "h1": "2.5rem",
        "h3": "1.75rem",
        "h4": "1.5rem",
        "large": "1.5rem",
        "xlarge": "2rem",
        "xxlarge": "1.5rem",
        "display1": "6rem",
        "display2": "5rem"
      },
      "xl": {
        "minWidth": "2800px",
        "body": "32px",
        "h1": "4rem",
        "h3": "3rem",
        "h4": "2.5rem",
        "large": "1.5rem",
        "xlarge": "3rem",
        "xxlarge": "4.5rem",
        "display1": "10rem",
        "display2": "5rem"
      }
    },
    "weights": {
      "normal": "century_gothic-regular",
      "bold": "century_gothic-bold"
    }
  },
  "spacing": {
    "baseUnit": "10px",
    "scale": {
      "0": "0",
      "1": "10px",
      "2": "20px",
      "3": "40px",
      "4": "60px",
      "5": "80px"
    },
    "utilities": {
      "margin": ["m", "mx", "my", "mt", "mb", "ms", "me"],
      "padding": ["p", "px", "py", "pt", "pb", "ps", "pe"],
      "gap": ["gap", "row-gap", "column-gap"],
      "responsive": ["sm", "md", "lg", "xl", "xxl"]
    }
  },
  "buttons": {
    "base": {
      "padding": "0.875rem 1.375rem",
      "fontFamily": "century_gothic-bold",
      "fontSize": "16px",
      "borderRadius": "0.375rem"
    },
    "variants": {
      "primary": {
        "background": "#DAC3A4",
        "color": "#000",
        "border": "#DAC3A4",
        "hover": {
          "background": "#ebd5b9",
          "border": "#ebd5b9"
        },
        "active": {
          "background": "#cfb491",
          "border": "#cfb491"
        },
        "disabled": {
          "color": "rgba(255, 255, 255, 0.5)",
          "background": "#DAC3A4",
          "border": "#DAC3A4"
        }
      },
      "outlineLight": {
        "background": "transparent",
        "color": "#fff",
        "border": "#fff",
        "hover": {
          "background": "#fff",
          "color": "#000"
        }
      }
    }
  },
  "forms": {
    "custom": {
      "input": {
        "border": "0",
        "borderBottom": "solid 1px rgba(255, 255, 255, 0.2)",
        "padding": "0.25rem",
        "background": "transparent",
        "borderRadius": "0",
        "placeholderOpacity": "0.4"
      },
      "textarea": {
        "border": "solid 1px rgba(255, 255, 255, 0.2)",
        "padding": "0.5rem",
        "background": "transparent"
      },
      "label": {
        "fontFamily": "century_gothic-bold"
      }
    },
    "floating": {
      "fontSize": "16px",
      "transform": "scale(0.65) translateY(-0.5rem) translateX(0.2rem)",
      "fontFamily": "century_gothic-bold"
    },
    "checkbox": {
      "size": "1.25rem",
      "borderRadius": "4px",
      "checkedBackground": "#DAC3A4",
      "checkedBorder": "#DAC3A4",
      "checkmarkColor": "#000"
    },
    "radio": {
      "size": "1.25rem",
      "borderWidth": "3px",
      "checkedBackground": "#DAC3A4",
      "checkedBorder": "#DAC3A4",
      "checkmarkColor": "#000"
    },
    "contact": {
      "maxWidth": {
        "mobile": "300px",
        "tablet": "410px",
        "desktop": "600px"
      },
      "input": {
        "height": {
          "mobile": "48px",
          "tablet": "56px",
          "desktop": "72px"
        },
        "width": {
          "mobile": "210px",
          "tablet": "340px",
          "desktop": "500px"
        },
        "fontSize": {
          "desktop": "24px"
        },
        "background": "rgba(255, 255, 255, 0.2)",
        "backdropFilter": "blur(20px)",
        "focusShadow": "0 0 10px rgba(255, 255, 255, 0.6)"
      }
    },
    "order": {
      "background": "#fff",
      "color": "#000",
      "placeholderColor": "rgba(0, 0, 0, 0.5)"
    },
    "validation": {
      "invalidBorderWidth": "3px",
      "invalidFeedbackColor": "#fff"
    }
  },
  "components": {
    "header": {
      "zIndex": 999999,
      "fontSize": "16px",
      "padding": {
        "mobile": "10px 20px 10px 14px",
        "desktop": "10px 40px"
      },
      "background": "linear-gradient(360deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.1) 50%)",
      "backdropFilter": "blur(20px)",
      "navItemPadding": "0.25rem 0",
      "dropdown": {
        "background": {
          "mobile": "transparent",
          "desktop": "rgba(255, 255, 255, 0.2)"
        },
        "backdropFilter": "blur(20px)",
        "itemColor": "#fff",
        "itemFont": "century_gothic-bold",
        "itemPadding": "0.5rem",
        "hoverBackground": "rgba(255, 255, 255, 0.1)"
      },
      "whiteVariant": {
        "background": "#000",
        "dropdownBackground": "#000"
      }
    },
    "footer": {
      "padding": {
        "mobile": "60px 28px 28px",
        "desktop": "60px"
      },
      "fontSize": {
        "mobile": "14px",
        "desktop": "18px"
      },
      "formMaxWidth": "450px",
      "layout": {
        "xl": {
          "logo": "15%",
          "content": "35%",
          "form": "35%"
        },
        "xxxl": {
          "logo": "10%",
          "content": "20%",
          "form": "25%"
        }
      }
    },
    "homeSection": {
      "height": {
        "mobile": "calc(100% - 48px)",
        "desktop": "calc(100% - 70px)"
      },
      "titleMarginTop": {
        "xl": "80px",
        "4k": "160px"
      },
      "footerMarginBottom": {
        "xl": "80px",
        "4k": "160px"
      }
    },
    "reserveCard": {
      "background": "#171717",
      "maxWidth": "450px",
      "modalBodyPaddingBottom": "260px"
    },
    "accordion": {
      "marginBottom": "10px",
      "buttonPadding": "24px",
      "buttonBorder": "solid 1px #495057",
      "buttonBorderRadius": "6px",
      "activeBorder": "3px solid #fff"
    },
    "orderCard": {
      "maxWidth": "450px",
      "background": "rgba(255, 255, 255, 0.2)",
      "backdropFilter": "blur(20px)",
      "padding": "2rem",
      "borderRadius": "0.5rem"
    },
    "orderTree": {
      "itemPaddingLeft": "30px",
      "itemPaddingBottom": "1rem",
      "itemMarginBottom": "1rem",
      "indicator": {
        "size": "11px",
        "defaultColor": "#DAC3A4",
        "doneColor": "#2ac467",
        "cancelledColor": "#d40d42"
      }
    },
    "pricingCheck": {
      "fontSize": "14px",
      "borderRadius": "0.5rem",
      "boxShadow": "0 0 0 1px #c1cbd5",
      "selectedBoxShadow": "0 0 0 3px white",
      "listColor": "#cfb491",
      "pricingFontSize": "16px"
    },
    "priceCard": {
      "background": "#212121",
      "fontSize": "14px"
    },
    "carousel": {
      "controlIconSize": "3rem",
      "controlIconBackground": "rgba(0, 0, 0, 0.3)",
      "indicatorSize": "8px",
      "indicatorMarginBottom": "1rem",
      "controlsHidden": "max-width: 767px"
    },
    "pressGroup": {
      "hoverShadow": "0 0px 30px rgba(0, 0, 0, 0.2)",
      "hoverTransform": "scale(.98)",
      "tagFontSize": {
        "mobile": "14px",
        "desktop": "16px"
      },
      "titleFontSize": {
        "mobile": "20px",
        "tablet": "28px",
        "desktop": "36px",
        "xxxl": "30px",
        "4k": "48px"
      },
      "titleLineHeight": "1.3",
      "tagHeight": {
        "mobile": "20px",
        "desktop": "32px"
      },
      "tagPaddingLeft": {
        "mobile": "30px",
        "desktop": "42px"
      }
    },
    "overlayVideo": {
      "height": "calc(100% - 70px)",
      "videoObjectFit": "cover"
    },
    "modalTab": {
      "activeColor": "#DAC3A4",
      "inactiveOpacity": "0.6",
      "activeFontWeight": "700"
    },
    "offcanvas": {
      "width": "41.66666667%",
      "maxWidth": "450px",
      "position": "right",
      "whiteVariantBackground": "#000",
      "whiteVariantBorderRadius": "1.25rem"
    },
    "avatar": {
      "size": {
        "mobile": "128px",
        "desktop": "200px"
      }
    },
    "arIcon": {
      "size": {
        "mobile": "48px",
        "xl": "72px",
        "4k": "96px"
      }
    }
  },
  "breakpoints": {
    "mobile": "< 576px",
    "sm": "≥ 576px",
    "md": "≥ 768px",
    "lg": "≥ 992px",
    "xl": "≥ 1200px",
    "xxl": "≥ 1400px",
    "xxxl": "≥ 1900px",
    "4k": "≥ 2800px"
  },
  "effects": {
    "backdropFilter": {
      "blur": "blur(20px)",
      "background": "rgba(255, 255, 255, 0.2)"
    },
    "transitions": {
      "default": "0.3s ease",
      "hover": "0.5s"
    },
    "shadows": {
      "pressHover": "0 0px 30px rgba(0, 0, 0, 0.2)",
      "dropdown": "0 2px 8px rgba(0, 0, 0, 0.1)"
    }
  },
  "dependencies": {
    "cssFramework": "Bootstrap 5",
    "cssFiles": [
      "bootstrap.min.css",
      "fonts.css",
      "from.css",
      "space.css",
      "images.css",
      "animate.css",
      "style.css"
    ]
  },
  "utilities": {
    "text": {
      "primary": ".text-primary",
      "secondary": ".text-secondary",
      "gradient": ".text-gradien"
    },
    "background": {
      "dark": ".bg-dark",
      "cover": ".bg-bcover"
    },
    "layout": {
      "ratioCustom": ".ratio-custom",
      "overlayMask": ".overlay-mask",
      "homeSectionTitle": ".home-section-title",
      "homeSectionFooter": ".home-section-footer"
    }
  }
}

